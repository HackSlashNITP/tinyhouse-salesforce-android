<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E74672"
    android:id="@+id/splash_relative_layout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="255dp"
        android:id="@+id/splash_image_view"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_screen_image"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/splash_text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="tinyhouse\nsalesforce"
        android:textColor="#FFFFFF"
        android:textSize="48dp"
        android:textStyle="normal|bold" />

</RelativeLayout>