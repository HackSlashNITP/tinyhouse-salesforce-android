<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recycler_bill_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Pizza Margherita"
                android:textAlignment="textStart"
                android:textColor="#F0527E"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingTop="30dp">

                <Button
                    android:id="@+id/recycler_bill_dec_button"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/recycler_bill_buttonleft"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="#F0517D" />

                <TextView
                    android:id="@+id/recycler_bill_quantity_textview"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/recycler_bill_quantity"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/recycler_bill_inc_button"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/recycler_bill_buttonright"

                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="#F0517D" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/recycler_bill_cross_button"
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableEnd="@drawable/ic_action_name" />

            <TextView
                android:id="@+id/recycler_bill_price_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="end"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:text="Rs. 300.0"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>